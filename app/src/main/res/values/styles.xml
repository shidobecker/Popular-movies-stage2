<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="DetailTitleContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/details_title_container_height</item>
    <item name="android:background">@color/colorAccent</item>
    <item name="android:gravity">center</item>
    <item name="android:orientation">vertical</item>
    <item name="android:elevation">2dp</item>
  </style>

  <style name="DetailsTitle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/details_title_text_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="DetailsPoster">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/details_poster_margin_top</item>
    <item name="android:minWidth">@dimen/details_poster_min_width</item>
    <item name="android:minHeight">@dimen/details_poster_min_height</item>
    <item name="android:scaleType">fitXY</item>
  </style>

  <style name="DetailsInformation">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_information_margin_start</item>
    <item name="android:layout_marginTop">@dimen/details_information_margin_top</item>
  </style>

  <style name="DetailsYear" parent="DetailsInformation">
    <item name="android:textColor">@color/colorMainText</item>
    <item name="android:textSize">@dimen/details_information_year_text_size</item>
  </style>

  <style name="DetailsVideo" parent="DetailsInformation">
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    <item name="android:textColor">@color/colorMainText</item>
    <item name="android:layout_marginTop">@dimen/default_medium_margin</item>
  </style>

  <style name="DetailsRating" parent="DetailsInformation">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/details_information_rating_text_size</item>
  </style>

  <style name="DetailsFavorite" parent="DetailsInformation">
    <item name="android:layout_width">@dimen/details_favorite_image_width</item>
    <item name="android:layout_height">@dimen/details_favorite_image_height</item>
  </style>

  <style name="DetailsDescription">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/details_description_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin_end</item>
  </style>

  <style name="DetailsDivider" parent="DetailsInformation">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1.5dp</item>
    <item name="android:background">@color/colorMainText</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/details_description_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin_end</item>
  </style>


  <style name="VideosListDivider" parent="DetailsDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1.5dp</item>
    <item name="android:background">@color/colorMainText</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/trailers_list_margin_top</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin_end</item>
  </style>

  <style name="DetailsProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin</item>
    <item name="android:layout_marginTop">@dimen/details_default_margin</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin</item>
    <item name="android:layout_marginBottom">@dimen/details_default_margin</item>
  </style>

  <style name="DetailsErrorMessage">
    <item name="android:visibility">gone</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin_end</item>
    <item name="android:layout_marginBottom">@dimen/details_default_margin</item>
    <item name="android:textColor">@color/colorMainText</item>
    <item name="android:textSize">@dimen/details_error_message_title_size</item>
  </style>

  <style name="MovieListErrorMessage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin_end</item>
    <item name="android:textColor">@color/colorMainText</item>
    <item name="android:textSize">@dimen/details_error_message_title_size</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="ReviewListAuthor">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/default_small_margin</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Holo.Large</item>
    <item name="android:textColor">@color/colorMainText</item>
  </style>

  <style name="ReviewListContent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/default_small_margin</item>
    <item name="android:layout_marginEnd">@dimen/details_default_margin_end</item>
    <item name="android:textAppearance">@android:style/TextAppearance.Holo.Small</item>
    <item name="android:textColor">@color/colorMainText</item>
  </style>

  <style name="ExtraInfoTitle">
    <item name="android:layout_marginTop">@dimen/details_default_margin</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    <item name="android:textColor">@color/colorMainText</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>


  <style name="VideosProgressBar" parent="DetailsProgressBar">
    <item name="android:layout_marginTop">@dimen/default_small_margin</item>
    <item name="android:layout_marginBottom">@dimen/default_small_margin</item>
  </style>

  <style name="ExtraInfoErrorMessage">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/details_default_margin_start</item>
    <item name="android:layout_marginTop">@dimen/default_small_margin</item>
    <item name="android:layout_marginEnd">@dimen/default_small_margin</item>
    <item name="android:layout_marginBottom">@dimen/default_small_margin</item>
    <item name="android:textColor">@color/colorMainText</item>
    <item name="android:visibility">gone</item>
  </style>

</resources>
