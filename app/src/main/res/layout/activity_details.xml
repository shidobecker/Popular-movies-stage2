<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linearLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.DetailsActivity">

  <LinearLayout
    android:id="@+id/details_movie_name_container"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/details_movie_original_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginTop="10dp"
      android:paddingBottom="16dp"
      android:textColor="@android:color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      tools:text="Original Title" />


  </LinearLayout>

  <ProgressBar
    android:id="@+id/details_movie_progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/details_movie_error_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:text="@string/error_fetching_movie"
    android:textColor="#FFC10003"
    android:textSize="20sp"
    android:visibility="gone"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/details_movie_progress_bar" />


  <ImageView
    android:id="@+id/details_movie_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="252dp"
    android:minWidth="185dp"
    android:minHeight="270dp"
    android:scaleType="fitXY"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/details_movie_error_message" />


  <TextView
    android:layout_marginTop="290dp"
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/release_date"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold"/>

  <TextView
    android:id="@+id/details_movie_release_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    android:layout_marginTop="300dp"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="34dp"
    android:text="@string/user_rating"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="@+id/details_movie_release_date"
    app:layout_constraintTop_toTopOf="@+id/details_movie_release_date" />

  <TextView
    android:id="@+id/details_movie_user_rating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    app:layout_constraintEnd_toStartOf="@+id/textView2"
    app:layout_constraintStart_toStartOf="@+id/textView2"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />


  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:text="@string/overview"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="@+id/details_movie_image"
    app:layout_constraintTop_toBottomOf="@+id/details_movie_image" />

  <TextView
    android:id="@+id/details_movie_overview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:textColor="@android:color/white"
    android:textSize="14sp"
    app:layout_constraintEnd_toStartOf="@+id/details_movie_image"
    app:layout_constraintStart_toStartOf="@+id/details_movie_image"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>